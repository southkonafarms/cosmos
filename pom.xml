			<groupId>org.drools</groupId>
			<artifactId>drools-core</artifactId>
			<version>6.4.0.Final</version>
		</dependency>
		<!-- - <dependency> <groupId>org.kie</groupId> <artifactId>kie-internal</artifactId> 
			<version>6.3.0</version> </dependency> -->
