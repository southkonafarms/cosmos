		<!-- - <dependency> <groupId>org.drools</groupId> <artifactId>drools-compiler</artifactId> 
			<version>6.3.0</version> <scope>runtime</scope> </dependency> -->
		<!-- https://mvnrepository.com/artifact/org.drools/drools-compiler -->
		<dependency>
			<groupId>org.drools</groupId>
			<artifactId>drools-compiler</artifactId>
			<version>6.4.0.Final</version>
		</dependency>
		<!-- <dependency> <groupId>org.drools</groupId> <artifactId>drools-core</artifactId> 
			<version>6.3.0</version> </dependency> -->
